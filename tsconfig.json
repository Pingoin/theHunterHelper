{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "target": "ES2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/shared/*",
                "src/@types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
    },
    "typedocOptions": {
        "entryPoints": [
            "src/backend",
            "src/shared"
        ],
        "out": "docs"
    },
    
    "include": [
        "src/backend/*",
        "src/shared/*"
    ]
}